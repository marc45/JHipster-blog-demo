<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

    <cache alias="com.hmcy.myapp.domain.User" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Authority" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Blog" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Entry" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Entry.tags" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Tag" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Tag.entries" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Address" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Category" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Category.products" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Customer" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Customer.addresses" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Customer.whislists" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Product" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Product.categories" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Wishlist" uses-template="simple"/>

    <cache alias="com.hmcy.myapp.domain.Wishlist.products" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
